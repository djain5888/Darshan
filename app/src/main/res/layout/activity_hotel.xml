<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_300"
    tools:context=".Activities.HotelActivity">


    <LinearLayout
        android:id="@+id/linaer"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:elevation="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view1H"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            card_view:background="@color/blue_50"
            card_view:cardCornerRadius="8dp"
            card_view:cardPreventCornerOverlap = "false"
            card_view:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:elevation="10dp"
                    android:src="@drawable/tourplace" />

                <TextView
                    android:id="@+id/info_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center_horizontal"
                    android:text="Places" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2H"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            card_view:background="@color/blue_50"
            card_view:cardCornerRadius="8dp"
            card_view:cardPreventCornerOverlap = "false"
            card_view:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:elevation="10dp"
                    android:src="@drawable/kalash2" />

                <TextView
                    android:id="@+id/info_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center_horizontal"
                    android:text="Pooja" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view3H"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            card_view:background="@color/blue_50"
            card_view:cardCornerRadius="8dp"
            card_view:cardPreventCornerOverlap = "false"
            card_view:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:elevation="10dp"
                    android:src="@drawable/packages_main" />

                <TextView
                    android:id="@+id/info_text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center_horizontal"
                    android:text="Packages" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view4H"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            card_view:background="@color/blue_50"
            card_view:cardCornerRadius="8dp"
            card_view:cardPreventCornerOverlap = "false"
            card_view:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:elevation="10dp"
                    android:src="@drawable/car" />

                <TextView
                    android:id="@+id/info_text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center_horizontal"
                    android:text="Cab" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTint="@color/yellow_200"
            android:layout_weight="1"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            card_view:background="@color/blue_50"
            card_view:cardCornerRadius="8dp"
            card_view:cardPreventCornerOverlap = "false"
            card_view:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:elevation="10dp"
                    android:src="@drawable/hotelq" />

                <TextView
                    android:id="@+id/info_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center_horizontal"
                    android:text="Hotel" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linaer">


        <AutoCompleteTextView
            android:id="@+id/hotel_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@drawable/bubble"
            android:backgroundTint="@color/blue_grey_100"
            android:backgroundTintMode="add"
            android:completionHint="1"
            android:completionThreshold="1"
            android:focusedByDefault="false"
            android:hint="City/Area/Hotel"
            android:padding="8dp" />

        <EditText
            android:id="@+id/checkIndate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@drawable/bubble"
            android:backgroundTint="@color/blue_grey_100"
            android:backgroundTintMode="add"
            android:hint="Check In Date"
            android:inputType="date"
            android:padding="8dp" />

        <EditText
            android:id="@+id/checkOutdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:gravity="center"
            android:background="@drawable/bubble"
            android:backgroundTint="@color/blue_grey_100"
            android:backgroundTintMode="add"
            android:hint="Check Out Date"
            android:inputType="date"
            android:padding="8dp" />

        <LinearLayout
            android:id="@+id/noRooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:text="No. of Rooms"
                android:textSize="16sp"
                android:gravity="center"/>

            <Spinner
                android:id="@+id/spinnerRooms"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:autofillHints="No. of persons"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/noPersons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:text="No. of Persons"
                android:textSize="16sp"
                android:gravity="center"/>

            <Spinner
                android:id="@+id/spinnerPersons"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:autofillHints="No. of persons"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <AutoCompleteTextView
            android:id="@+id/reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:completionHint="1"
            android:completionThreshold="1"
            android:background="@drawable/bubble"
            android:backgroundTint="@color/blue_grey_100"
            android:backgroundTintMode="add"
            android:hint="Reason for booking (Optional)"
            android:focusedByDefault="false"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/submitHotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bubble"
            android:backgroundTint="@color/red_500"
            android:backgroundTintMode="add"
            android:onClick="submitHotel"
            android:padding="8dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:textStyle="bold" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>