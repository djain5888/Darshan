<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:padding="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:clipChildren="false">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:elevation="8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        card_view:cardElevation="10dp"
        card_view:cardPreventCornerOverlap="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_margin="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/r1">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="101dp"
                    android:scaleType="fitXY"
                    android:id="@+id/car"
                    android:src="@drawable/frame"
                    app:srcCompat="@drawable/dzire" />

                <ImageView
                    android:id="@+id/rimg"
                    android:layout_width="71dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="17dp"
                    android:scaleType="fitEnd"

                    android:foregroundGravity="right"
                    android:padding="2dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/car"
                    android:src="@drawable/rupeepng" />

                <TextView
                    android:id="@+id/price2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                   android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/rimg"
                    android:background="@color/active_light"
                    android:gravity="left"
                    android:text="5000"
                    android:textColor="@color/active_dark" />

                <TextView
                    android:id="@+id/price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="50dp"
                    android:layout_below="@id/price2"
                    android:layout_marginBottom="2dp"
                    android:gravity="top"
                    android:padding="0dp"
                    android:layout_toRightOf="@id/car"
                    android:background="@color/active_light"
                    android:text="*Inclusive of GST"
                    android:textColor="@color/active_dark" />


                <Button
                    android:id="@+id/bookButton"
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:layout_below="@id/price1"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/car"
                    android:background="@color/light_green_900"
                    android:shadowColor="@color/cyan_A400"
                    android:text="BOOK"

                    android:textColor="@color/active_light"
                    android:textSize="20sp" />


                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:layout_below="@id/car">

                    <TextView
                        android:id="@+id/cabName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="D'zire"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000"
                        android:textSize="24sp"
                        android:gravity="center"
                        app:autoSizeTextType="none" />

                    <TextView
                        android:id="@+id/cabName1"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="or Similar*"
                        android:textColor="#000"
                        android:textSize="14sp"
                        app:autoSizeTextType="none" />

                    <TextView
                        android:id="@+id/rat1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="75dp"
                        android:text="4.5"
                        android:textColor="@color/grey_1000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/rat2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/5" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:layout_below="@id/mainImage"
                        android:layout_marginTop="19dp"
                        android:scaleType="fitStart"
                        android:layout_toLeftOf="@id/rat2"
                        android:src="@drawable/ic_star" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_below="@id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/seatim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/seat" />

                    <ImageView
                        android:id="@+id/bagim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/bag" />

                    <ImageView
                        android:id="@+id/acim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1"
                        android:src="@drawable/ac" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear3"
                    android:layout_below="@id/linear2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/seattext"
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:text="4 Seater" />

                    <TextView
                        android:id="@+id/bagtext"
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="2 Luggage" />

                    <TextView
                        android:id="@+id/actext"
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Air Condition" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear4"
                    android:layout_below="@id/linear3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/notetext1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="NOTE : "
                        android:textSize="12sp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:textColor="@color/red_900"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/notetext2"
                        android:layout_width="142dp"
                        android:layout_marginBottom="2dp"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"
                        android:layout_height="match_parent"
                        android:text="Extra charge 10/km"
                        android:textColor="@color/active_dark" />
                </LinearLayout>

            </RelativeLayout>






    </android.support.v7.widget.CardView>

</LinearLayout>
