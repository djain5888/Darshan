<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_5"
    tools:context=".Activities.HomeActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_marginTop="2dp"
        android:layout_height="45dp"
        app:itemIconSize="18dp"
        app:itemIconTint="@color/drawer_item1"
        app:itemTextColor="@color/drawer_item1"
        app:itemBackground="@color/grey_300"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

        <LinearLayout
            android:id="@+id/linaer"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:elevation="40dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="1dp"
                card_view:background="@color/blue_50"
                card_view:cardCornerRadius="8dp"
                card_view:cardPreventCornerOverlap = "false"
                card_view:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                    android:id="@+id/img1"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                        android:padding="3dp"
                    android:elevation="10dp"
                    android:src="@drawable/tourplace" />

                    <TextView
                        android:id="@+id/info_text1"
                        android:textSize="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:gravity="bottom|center_horizontal"
                        android:text="Places" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="1dp"
                card_view:background="@color/blue_50"
                card_view:cardCornerRadius="8dp"
                card_view:cardPreventCornerOverlap = "false"
                card_view:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:elevation="10dp"
                        android:padding="3dp"
                        android:src="@drawable/kalash2" />

                    <TextView
                        android:id="@+id/info_text2"
                        android:textSize="10sp"
                        android:layout_marginTop="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|center_horizontal"
                        android:text="Pooja" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"

                android:layout_marginBottom="1dp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="1dp"
                card_view:background="@color/blue_50"
                card_view:cardCornerRadius="8dp"
                card_view:cardPreventCornerOverlap = "false"
                card_view:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/img3"
                        android:padding="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:elevation="10dp"
                        android:src="@drawable/packages_main" />

                    <TextView
                        android:id="@+id/info_text3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:layout_marginTop="1dp"
                        android:gravity="bottom|center_horizontal"
                        android:text="Packages" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="1dp"
                card_view:background="@color/blue_50"
                card_view:cardCornerRadius="8dp"
                card_view:cardPreventCornerOverlap = "false"
                card_view:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/img4"
                        android:padding="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:elevation="10dp"
                        android:src="@drawable/car" />

                    <TextView
                        android:id="@+id/info_text4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:gravity="bottom|center_horizontal"
                        android:text="Cab"
                        android:textSize="10sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="1dp"
                card_view:background="@color/blue_50"
                card_view:cardCornerRadius="8dp"
                card_view:cardPreventCornerOverlap = "false"
                card_view:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:padding="3dp"
                        android:elevation="10dp"
                        android:src="@drawable/hotelq" />

                    <TextView
                        android:id="@+id/info_text"
                        android:textSize="10sp"
                        android:layout_marginTop="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|center_horizontal"
                        android:text="Hotel" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>



    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linaer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linaer">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/grey_200"
                    android:backgroundTintMode="add"
                    android:background="@drawable/bubble"

                    app:cardCornerRadius="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <AutoCompleteTextView
                        android:id="@+id/search1"
                        android:layout_width="278dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="2dp"
                        android:background="@drawable/bubble"
                        android:backgroundTint="@color/blue_grey_100"
                        android:backgroundTintMode="add"
                        android:completionHint="1"
                        android:completionThreshold="1"
                        android:focusedByDefault="false"
                        android:textSize="16dp"
                        android:hint="Search Here...."
                        android:padding="10dp" />

                        <ImageView
                            android:layout_width="47dp"
                            android:layout_height="47dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginBottom="0dp"
                            android:layout_toRightOf="@id/search1"
                            android:foregroundGravity="center_vertical"
                            android:padding="8dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/ic_action_nam" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:paddingTop="8dp"
                android:layout_below="@+id/lv1"
                android:text="Most Visited Pilgrims"
                android:textSize="20dp"
                android:id="@+id/msptext"
                android:elevation="@dimen/cardview_default_elevation"
                android:textStyle="bold"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:padding="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:paddingTop="8dp"-->
                <!--android:text="Pilgrims"-->
                <!--android:textSize="20dp"-->
